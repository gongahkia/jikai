# Jikai Environment Configuration
# Copy this file to .env and update the values as needed

# Application Configuration
APP_NAME=Jikai
APP_VERSION=2.0.0
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_CORS_ORIGINS=["*"]
API_RATE_LIMIT=100

# LLM Configuration
LLM_PROVIDER=ollama
LLM_MODEL=llama2:7b
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048
LLM_TIMEOUT=30

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434

# OpenAI Configuration (optional)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION=tort_hypotheticals

# AWS Configuration (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=jikai-corpus

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=./logs/jikai.log

# Tort Law Configuration
LAW_DOMAIN=tort
DEFAULT_TOPICS=["negligence", "duty of care", "standard of care", "causation", "remoteness", "battery", "assault", "false imprisonment", "defamation", "private nuisance", "trespass to land", "vicarious liability", "strict liability", "harassment"]
MAX_PARTIES=5
MIN_PARTIES=2
